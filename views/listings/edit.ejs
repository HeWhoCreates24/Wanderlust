<% layout("/layouts/boilerplate.ejs") -%>
<body>
    <h3 class="mb-4">Edit listing</h3>
    <form action="/listings/<%= listing._id %>?_method=put" method="post" class="row g-3 needs-validation" enctype="multipart/form-data" novalidate>

      <div class="col-12 col-lg-5">
        <label for="title" class="form-label">Title</label>
        <input class="form-control" type="text" name="title" id="title" value="<%= listing.title %>"" required/>
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Title is required
          </div>
      </div>

      
      <div class="col-12 col-lg-4">
        <label for="image" class="form-label">New Image Upload</label>
        <input
        class="form-control"
        type="file"
        name="image"
        id="image"
        />
        <div class="valid-feedback">
          Not required, though good to have!
        </div>
      </div>

      <div class="col-12 col-lg-3">
        <label for="category" class="form-label">Category</label>
        <select name="category" id="category" class="form-select" required>
          <option value="<%= listing.category %>" selected>Current -> <%= listing.category %></option>
          <option value="trending">Trending</option>
          <option value="rooms">Rooms</option>
          <option value="iconic-cities">Iconic City</option>
          <option value="mountains">Mountain</option>
          <option value="castles">Castle</option>
          <option value="amazing-pools">Amazing Pool</option>
          <option value="camping">Camping</option>
          <option value="farms">Farm</option>
          <option value="arctic">Arctic</option>
        </select>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Category is required!
        </div>
      </div>

      <div class="col-12 scale-2">
        <label for="preview_image">Preview Current Image</label>
        <img src="<%= previewUrl %>" alt="preview_image" name="preview_image" class="rounded w-50 mx-auto d-block">
      </div>
      
      <div class="col-12">
        <label for="description" class="form-label">Description</label>
        <textarea
        class="form-control"
        name="description"
        id="description"
        required
      ><%= listing.description %></textarea>
      <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please write a small description
          </div>
      </div>

      <div class="col-12 col-md-4">
        <label for="price" class="form-label">Price</label>
        <div class="input-group">
          <span class="input-group-text">&#8377;</span>
          <input class="form-control" type="number" name="price" id="price" value="<%= listing.price %>" required/>
          <span class="input-group-text"> / night</span>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Price is required
          </div>
        </div>
      </div>

      <div class="col-12 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input
        class="form-control"
          type="text"
          name="country"
          id="country"
          value="<%= listing.country %>"
          required
        />
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Country is required
          </div>
      </div>

      <div class="col-12">
        <label for="location" class="form-label">Location</label>
        <input
        class="form-control"
          type="text"
          name="location"
          id="location"
          value="<%= listing.location %>"
          required
        />
        <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Location is required
          </div>
      </div>

      <div class="col-12">
        <button class="btn btn-danger w-100" type="submit">Save Listing</button>
      </div>
    </form>
</body>